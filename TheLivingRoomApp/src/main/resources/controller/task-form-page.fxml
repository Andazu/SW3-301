<BorderPane fx:id="taskFormBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1028.0" stylesheets="@../css/task-form-page.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TaskFormController">
   <bottom>
      <HBox prefHeight="28.0" prefWidth="1028.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="cancelButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#cancelAndReturnToOverviewPage" text="Cancel" />
