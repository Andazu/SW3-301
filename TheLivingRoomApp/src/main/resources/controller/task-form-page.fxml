            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitAndReturnToOverviewPage" text="Submit" />
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <HBox prefHeight="100.0" prefWidth="250.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="250.0">
                     <children>
                        <Label text="Title">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="titleTextField" prefHeight="25.0" prefWidth="210.0" promptText="Title" />
                        <Label text="Description">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="descriptionTextField" prefHeight="25.0" prefWidth="210.0" promptText="Description" />
                        <Label text="Date">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="250.0" promptText="Date" />
                        <Label text="Frequency">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="frequencyDropdownMenu" prefHeight="25.0" prefWidth="250.0" promptText="Frequency" />
                        <Label text="Urgency">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="urgencyDropdownMenu" prefHeight="25.0" prefWidth="250.0" promptText="Urgency" />
                        <Label text="Type">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="typeDropdownMenu" prefHeight="25.0" prefWidth="250.0" promptText="Type" />
                        <Label text="Assignee">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <RadioButton fx:id="specificRadioButton" mnemonicParsing="false" onAction="#setSpecificRadioButtonActive" text="Specific" />
                              <RadioButton fx:id="generalRadioButton" mnemonicParsing="false" onAction="#setGeneralRadioButtonActive" text="General" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="pickAssigneeButton" alignment="CENTER" mnemonicParsing="false" onAction="#openTableViewWithEmployees" text="Pick Assignees" />
                           </children>
                        </HBox>
                        <Label fx:id="selectedAssignees" text="Selected Assignees">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ScrollPane fx:id="scrollPane" prefHeight="137.0" prefWidth="250.0">
                           <content>
                              <GridPane fx:id="selectedEmployeeGridPane" prefHeight="10.0" prefWidth="10.0">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                              </GridPane>
                           </content>
                        </ScrollPane>
                        <Button fx:id="deleteSelected" mnemonicParsing="false" onAction="#deleteSelectedAssignees" text="Delete Selected" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" />
         </children>
      </HBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Create New Task">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
</BorderPane>
